<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/frame_selection_window_width"
        android:layout_height="@dimen/frame_selection_window_height"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:clipToPadding="true">

        <ImageView
            android:id="@+id/imgteamA"
            android:layout_width="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_height="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvVs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="vs"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imgteam"
            android:layout_width="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_height="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgteamB"
            android:layout_width="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_height="@dimen/frame_selection_window_team_logo_dimen"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</FrameLayout>